                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="No businesses added yet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Add your shop or outlet location\nto connect with customers"
                        android:textSize="14sp"
                        android:textColor="@color/gray_light"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

                <!-- Add Business Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Add New Business"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:icon="@android:drawable/ic_input_add"
                    app:strokeColor="@color/gray_light"
                    app:iconTint="@color/gray_light"
                    android:textColor="@color/gray_dark"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- My Certifications Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“œ"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="My Certifications"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"/>

                    <TextView
                        android:id="@+id/tvCertificationsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@color/green_primary"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/green_light"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"/>

                </LinearLayout>

                <!-- Expiry Warning (if any) -->
                <LinearLayout
                    android:id="@+id/layoutExpiryWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="#FFF3E0"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvExpiryWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="1 certification expiring soon"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#E65100"/>

                </LinearLayout>

                <!-- Certifications List Container -->
                <LinearLayout
                    android:id="@+id/certificationsListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone"/>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/layoutCertificationsEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“œ"
                        android:textSize="48sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="No certifications added yet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Add your agricultural certifications\nto build trust with customers"
                        android:textSize="14sp"
                        android:textColor="@color/gray_light"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

                <!-- Add Certification Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddCertification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Add New Certification"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:icon="@android:drawable/ic_input_add"
                    app:strokeColor="@color/gray_light"
                    app:iconTint="@color/gray_light"
                    android:textColor="@color/gray_dark"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Account Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Settings"
                    android:textSize="16sp"
