<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/green_primary"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green_light"
        android:backgroundTint="#F1F8E9">

        <!-- Farm Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFarmName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farm Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_dark"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvFarmLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Location"
                        android:textSize="13sp"
                        android:textColor="@color/gray_dark"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Edit/Delete Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditFarm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconSize="20dp"
                    app:iconTint="@color/green_primary"
                    app:iconGravity="textStart"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteFarm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconSize="20dp"
                    app:iconTint="@android:color/holo_red_dark"
                    app:iconGravity="textStart"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green_primary"
            android:alpha="0.2"
            android:layout_marginHorizontal="16dp"/>

        <!-- Farm Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GPS Coordinates (if available) -->
            <LinearLayout
                android:id="@+id/layoutGPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ºï¸"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="GPS: 0.0, 0.0"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"/>

            </LinearLayout>

            <!-- Total Size -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/white"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Farm Size:"
                    android:textSize="13sp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/tvTotalSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"/>

            </LinearLayout>

            <!-- Farmer Type -->
            <LinearLayout
                android:id="@+id/layoutFarmType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/white"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farmer Type:"
                    android:textSize="13sp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/tvFarmerType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"/>
            </LinearLayout>

            <!-- Varieties Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ðŸ Pineapple Varieties:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"/>

            <!-- Varieties Container -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/varietiesChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="8dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
